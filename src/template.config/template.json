{
  "$schema": "http://json.schemastore.org/template",
  "author": "M.Tsatsarov",
  "classifications": ["Web"],
  "name": "ASP .NET CORE WEB API TEMPLATE",
  "identity": "dotn.Custom.Template",
  "shortName": "asp-web-api-2",
  "tags": {
    "language": "C#",
    "type": "project"
  },
  "sourceName": "test",
  "symbols": {
    "projectName": {
      "type": "parameter",
      "datatype": "string",
      "replaces": "MyProject",
      "defaultValue": "MyProject"
    }
  },
  "sources": [
    {
      "modifiers": [
        {
          "condition": "'__projectName__' != ''",
          "rename": "__projectName__/MyWebApi.csproj",
          "exclude": [
            "src/.vs/**",
            ".template_config/**"
          ]
        },
        {
          "rename": "__projectName__/Program.cs"
        },
        {
          "rename": "__projectName__/Startup.cs"
        }
      ]
    }
  ]
}
